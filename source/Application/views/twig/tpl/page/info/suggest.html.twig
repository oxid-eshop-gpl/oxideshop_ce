{% capture append = "oxidBlock_content" %}
    <h1 class="page-header">{{ oView.getTitle() }}</h1>

    <ol>
        <li>{{ translate({ ident: "MESSAGE_ENTER_YOUR_ADDRESS_AND_MESSAGE" }) }}</li>
        <li>{{ translate({ ident: "MESSAGE_RECOMMEND_CLICK_ON_SEND" }) }}</li>
    </ol>

    {% ifcontent ident "oxsecurityinfo" set oCont %}
        <p>{{ translate({ ident: "MESSAGE_READ_DETAILS" }) }} <a href="{{ oCont.getLink() }}">{{ oCont.oxcontents__oxtitle.value }}</a></p>
    {% endifcontent %}

    {% include "form/suggest.html.twig" %}
    {{ insert_tracker({title: template_title}) }}
{% endcapture %}
{% include "layout/page.html.twig" with {sidebar: "Right"} %}