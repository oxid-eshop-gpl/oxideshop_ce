{% if oView.isEnabled() and get_global_cookie('displayedCookiesNotification') != '1' %}
    {{ script({ include: "js/libs/jquery.cookie.min.js", dynamic: __oxid_include_dynamic }) }}
    {{ script({ add: "$.cookie('testing', 'yes'); if(!$.cookie('testing')) $('#cookieNote').hide(); else{ $('#cookieNote').show(); $.cookie('testing', null, -1);}", dynamic: __oxid_include_dynamic }) }}
    {{ script({ include: "js/widgets/oxcookienote.min.js", dynamic: __oxid_include_dynamic }) }}
    <div id="cookieNote">
        <div class="alert alert-info" style="margin: 0;">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">{{ translate({ ident: 'COOKIE_NOTE_CLOSE' }) }}</span>
            </button>
            {{ translate({ ident: 'COOKIE_NOTE' }) }}
            <span class="cancelCookie"><a href="{{ seo_url({ ident: oViewConf.getSelfLink()|cat("cl=clearcookies") }) }}" title="{{ translate({ ident: 'COOKIE_NOTE_DISAGREE' }) }}">{{ translate({ ident: 'COOKIE_NOTE_DISAGREE' }) }}</a></span>
        </div>
    </div>
    {{ script({ add: "$('#cookieNote').oxCookieNote();", dynamic: __oxid_include_dynamic }) }}
{% endif %}
{{ script({ widget: oView.getClassName(), dynamic: __oxid_include_dynamic }) }}
