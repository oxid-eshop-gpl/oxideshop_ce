    {{ include_widget({ cl: "oxwCookieNote", _parent: oView.getClassName(), nocookie: 1 }) }}
{% endif %}
{% block header_main %}
    {% set blFullwidth = oViewConf.getViewThemeParam('blFullwidthLayout') %}

    <header id="header">

        <div class="{% if blFullwidth %}container{% else %}container-fluid{% endif %}">

            <div class="header-box">

                <div class="row">
                    <div class="col-xs-5 col-sm-6 col-md-4 logo-col">
                        {% block layout_header_logo %}
                            {% set slogoImg = oViewConf.getViewThemeParam('sLogoFile') %}
                            {% set sLogoWidth = oViewConf.getViewThemeParam('sLogoWidth') %}
                            {% set sLogoHeight = oViewConf.getViewThemeParam('sLogoHeight') %}
                            <a href="{{ oViewConf.getHomeLink() }}" title="{{ oxcmp_shop.oxshops__oxtitleprefix.value }}">
                                <img src="{{ oViewConf.getImageUrl(slogoImg) }}" alt="{{ oxcmp_shop.oxshops__oxtitleprefix.value }}" style="{% if sLogoWidth %}width:auto;max-width:{{ sLogoWidth }}px;{% endif %}{% if sLogoHeight %}height:auto;max-height:{{ sLogoHeight }}px;{% endif %}">
                            </a>
                        {% endblock %}
                    </div>
                    <div class="col-xs-7 col-sm-6 col-md-4 col-md-push-4 menus-col">
                        {% block layout_header_top %}
                            <div class="menu-dropdowns pull-right">
                                {% block dd_layout_page_header_icon_menu_languages %}
                                    {# Language Dropdown #}
                                    {{ include_widget({ cl: "oxwLanguageList", lang: oViewConf.getActLanguageId(), _parent: oView.getClassName(), nocookie: 1, _navurlparams: oViewConf.getNavUrlParams(), anid: oViewConf.getActArticleId() }) }}
                                {% endblock %}
                                {% block dd_layout_page_header_icon_menu_currencies %}
                                    {# Currency Dropdown #}
                                    {{ include_widget({ cl: "oxwCurrencyList", cur: oViewConf.getActCurrency(), _parent: oView.getClassName(), nocookie: 1, _navurlparams: oViewConf.getNavUrlParams(), anid: oViewConf.getActArticleId() }) }}
                                {% endblock %}

                                {% block dd_layout_page_header_icon_menu_account %}
                                    {% if oxcmp_user or oView.getCompareItemCount() or Errors.loginBoxErrors %}
                                        {% set blAnon = 0 %}
                                        {% set force_sid = oViewConf.getSessionId() %}
                                    {% else %}
                                        {% set blAnon = 1 %}
                                    {% endif %}
                                    {# Account Dropdown #}
                                    {{ include_widget({ cl: "oxwServiceMenu", _parent: oView.getClassName(), force_sid: force_sid, nocookie: blAnon, _navurlparams: oViewConf.getNavUrlParams(), anid: oViewConf.getActArticleId() }) }}
                                {% endblock %}

                                {% block dd_layout_page_header_icon_menu_minibasket %}
                                    {# Minibasket Dropdown #}
                                    {% if oxcmp_basket.getProductsCount() %}
                                        {% set blAnon = 0 %}
                                        {% set force_sid = oViewConf.getSessionId() %}
                                    {% else %}
                                        {% set blAnon = 1 %}
                                    {% endif %}
                                    {{ include_widget({ cl: "oxwMiniBasket", nocookie: blAnon, force_sid: force_sid }) }}
                                {% endblock %}
                            </div>
                        {% endblock %}
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 col-md-pull-4 search-col">
                        {% include "widget/header/search.html.twig" %}
                    </div>
                </div>

            </div>
        </div>

        {% block layout_header_bottom %}
            {{ include_widget({ cl: "oxwCategoryTree", cnid: oView.getCategoryId(), sWidgetType: "header", _parent: oView.getClassName(), nocookie: 1 }) }}
        {% endblock %}

    </header>

{% endblock %}

